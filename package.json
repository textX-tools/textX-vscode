{
	"name": "textx-ls",
	"description": "A language server client for textx dsl",
	"author": "Daniel Elero",
	"version": "0.0.1",
	"publisher": "danixeee",
	"repository": {
		"type": "git",
		"url": "https://github.com/textX-tools/textX-vscode"
	},
	"engines": {
		"vscode": "^1.15.0"
	},
	"categories": [
		"Languages"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "textx",
				"aliases": [
					"textx",
					"textX"
				],
				"extensions": [
					".tx"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "textx",
				"scopeName": "source.textx",
				"path": "./syntaxes/textx.tmLanguage.json"
			}
		],
		"themes": [
			{
				"label": "textXDark",
				"uiTheme": "vs-dark",
				"path": "./themes/textXDark-color-theme.json"
			}
		],
		"commands": [
			{
				"command": "genext",
				"title": "Generate extension"
			},
			{
				"command": "corefresh",
				"title": "Refresh",
				"icon": {
					"dark": "resources/dark/icon-refresh.svg",
					"light": "resources/light/icon-refresh.svg"
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "codeOutline",
					"name": "Code Outline"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "corefresh",
					"when": "view == codeOutline",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"client-watch": "tsc -w -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"vscode": "npm run vscode:prepublish && VSCODE=$(which code-insiders || which code || echo echo ERROR: neither the code nor code-insiders vscode executable is installed); USER=dummy-dont-share-vscode-instance $VSCODE --user-data-dir=$PWD/.vscode-dev/user-data --extensionHomePath=$PWD/.vscode-dev/extensions --extensionDevelopmentPath=$PWD $*"
	},
	"devDependencies": {
		"typescript": "^2.1.5",
		"vscode": "^1.1.5",
		"mocha": "^2.3.3",
		"@types/node": "^6.0.40",
		"@types/mocha": "^2.2.32"
	},
	"dependencies": {
		"vscode-languageclient": "^3.3.0"
	}
}
